{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Configure",
            "binaryDir": "${sourceDir}/Build"
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "Default Build",
            "configurePreset": "default"
        }
    ],
    "workflowPresets": [
        {
            "name": "configure-and-build",
            "displayName": "Configure and Build",
            "steps": [
                {
                    "type": "configure",
                    "name": "default"
                },
                {
                    "type": "build",
                    "name": "default"
                }
            ]
        }
    ]
}
